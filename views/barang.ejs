<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Barang demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>
    <div class="container mt-2">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Stok</th>
                        <th>Harga</th>
                    </tr>
                    <% 
                    let nomor=1 
                    const IDR = new Intl.NumberFormat('id-ID', 
                    {style: 'currency' , 
                    currency: 'IDR' , 
                    }) %>
                        <% barang.forEach((item)=> {%>
                            <tr>
                                <td>
                                    <%= nomor++ %>
                                </td>
                                <td>
                                    <%= item.nama %>
                                </td>
                                <td>
                                    <%= item.stok %>
                                </td>
                                <td>
                                    <%= IDR.format(item.harga) %>
                                </td>
                            </tr>
                        <% }) %>
                </table>
                <a href="/tambahbarang" class="btn btn-primary" id="tambahBarangButton">Tambah Barang Baru</a>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("tambahBarangButton").addEventListener("click", function(event) {
          event.preventDefault(); // Menghentikan perilaku default tautan
          window.location.href = "/tambahbarang"; // Mengarahkan ke halaman tambahBarang
        });
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>