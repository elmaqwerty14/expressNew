<%- include('bagian/header') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <% if(error.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <ul>
                            <% error.forEach((item)=> { %>
                                <li>
                                    <%= item.path %>
                                        <%= item.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <h1>Edit Barang</h1>
                        <form action="/updateBarang/<%= item.id %>" method="POST">
                            <div class="form-group">
                                <label for="nama">Nama:</label>
                                <input type="text" id="nama" class="form-control" name="nama" value="<%= item.nama %>"
                                    >
                            </div>

                            <div class="form-group">
                                <label for="harga">Harga:</label>
                                <input type="number" id="harga" class="form-control" name="harga"
                                    value="<%= item.harga %>" >
                            </div>

                            <div class="form-group">
                                <label for="stok">Stok:</label>
                                <input type="number" id="stok" class="form-control" name="stok" value="<%= item.stok %>"
                                    >
                            </div>

                            <button type="submit" class="btn btn-primary">Edit</button>
                        </form>
            </div>
        </div>
    </div>

    </div>
    <%- include('bagian/footer') %>